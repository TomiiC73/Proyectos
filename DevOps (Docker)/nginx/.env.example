# === CONFIGURACIÓN NGINX REVERSE PROXY ===
# PLANTILLA - Copia este archivo como .env y configura con valores reales

# === CONFIGURACIÓN DE SERVIDOR ===
NGINX_HOST=localhost
NGINX_PORT=80
NGINX_SSL_PORT=443

# === CONFIGURACIÓN DE UPSTREAM SERVICES ===
API_UPSTREAM=api:5000
WEB_UPSTREAM=web:3000
NOTIFICATIONS_UPSTREAM=notifications:8001

# === CONFIGURACIÓN DE PROXY ===
PROXY_CONNECT_TIMEOUT=60s
PROXY_SEND_TIMEOUT=60s
PROXY_READ_TIMEOUT=60s
PROXY_BUFFER_SIZE=4k
PROXY_BUFFERS=8 4k
PROXY_BUSY_BUFFERS_SIZE=8k

# === CONFIGURACIÓN DE LOGS ===
ACCESS_LOG_FORMAT=main
ERROR_LOG_LEVEL=warn

# === CONFIGURACIÓN DE SEGURIDAD ===
SSL_PROTOCOLS="TLSv1.2 TLSv1.3"
SSL_CIPHERS="ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256"
ADD_SECURITY_HEADERS=true

# === CONFIGURACIÓN DE PERFORMANCE ===
GZIP_ENABLED=true
GZIP_TYPES="text/plain application/json application/javascript text/css text/xml application/xml"
CLIENT_MAX_BODY_SIZE=10M

# === CONFIGURACIÓN DE SSL (si se usa) ===
SSL_CERTIFICATE_FILE=/run/secrets/ssl_cert
SSL_CERTIFICATE_KEY_FILE=/run/secrets/ssl_key