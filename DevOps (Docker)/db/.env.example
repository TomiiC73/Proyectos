# === CONFIGURACIÓN BASE DE DATOS MYSQL ===

# === CONFIGURACIÓN PRINCIPAL ===
MYSQL_DATABASE=todos_db
MYSQL_USER=todos_user
# Los passwords se manejan como secrets
MYSQL_ROOT_PASSWORD_FILE=/run/secrets/db_root_password
MYSQL_PASSWORD_FILE=/run/secrets/db_password

# === CONFIGURACIÓN DE SERVIDOR ===
MYSQL_TCP_PORT=3306
MYSQL_BIND_ADDRESS=0.0.0.0

# === CONFIGURACIÓN DE PERFORMANCE ===
MYSQL_INNODB_BUFFER_POOL_SIZE=256M
MYSQL_MAX_CONNECTIONS=100
MYSQL_QUERY_CACHE_SIZE=32M
MYSQL_THREAD_CACHE_SIZE=8

# === CONFIGURACIÓN DE LOGGING ===
MYSQL_LOG_ERROR=/var/log/mysql/error.log
MYSQL_SLOW_QUERY_LOG=1
MYSQL_SLOW_QUERY_LOG_FILE=/var/log/mysql/slow.log
MYSQL_LONG_QUERY_TIME=2

# === CONFIGURACIÓN DE SEGURIDAD ===
MYSQL_SKIP_NETWORKING=false
MYSQL_SECURE_FILE_PRIV=/var/lib/mysql-files/

# === CONFIGURACIÓN DE CHARSET ===
MYSQL_CHARACTER_SET_SERVER=utf8mb4
MYSQL_COLLATION_SERVER=utf8mb4_unicode_ci

# === CONFIGURACIÓN DE TIMEZONE ===
MYSQL_DEFAULT_TIME_ZONE=America/Argentina/Buenos_Aires