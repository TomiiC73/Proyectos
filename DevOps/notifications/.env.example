# Variables de Entorno - Microservicio de Notificaciones
# PLANTILLA - Copia este archivo como .env y configura con valores reales

# === CONFIGURACIÓN GENERAL ===
APP_NAME=Notifications Service
APP_VERSION=1.0.0
DEBUG=true
PORT=8001
HOST=0.0.0.0

# === BASE DE DATOS ===
DB_TYPE=memory

# === CONFIGURACIÓN DE EMAIL ===
# Configuración de ejemplo - reemplazar con datos reales
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME=tu-email@gmail.com
SMTP_PASSWORD=tu-app-password-aqui
SMTP_FROM_EMAIL=noreply@todoapp.com
SMTP_FROM_NAME=Sistema de Notificaciones Todo App

# === CONFIGURACIÓN DE SCHEDULER ===
SCHEDULER_TIMEZONE=America/Argentina/Buenos_Aires
ENABLE_SCHEDULER=true

# === CONFIGURACIÓN DE LOGGING ===
LOG_LEVEL=INFO
LOG_FORMAT=json

# === CONFIGURACIÓN DE CORS ===
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost
ALLOW_CREDENTIALS=true

# === CONFIGURACIÓN DE RATE LIMITING ===
ENABLE_RATE_LIMITING=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# === CONFIGURACIÓN DE NOTIFICACIONES ===
MAX_RETRIES=3
RETRY_DELAY=5
ENABLE_EMAIL_NOTIFICATIONS=true

# === CONFIGURACIÓN DE DESARROLLO ===
RELOAD=true
WORKERS=1

# === CONFIGURACIÓN DE INTEGRACIÓN CON API PRINCIPAL ===
MAIN_API_URL=http://api:5000
MAIN_API_KEY=desarrollo-key-123