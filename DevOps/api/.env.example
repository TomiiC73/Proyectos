# === CONFIGURACIÓN API BACKEND ===
# PLANTILLA - Copia este archivo como .env y configura con valores reales

# === CONFIGURACIÓN DE BASE DE DATOS ===
DB_HOST=db
DB_PORT=3306
DB_NAME=todos_db
DB_USER=todos_user
# Los passwords se manejan como secrets
DB_PASSWORD_FILE=/run/secrets/db_password

# === CONFIGURACIÓN FLASK ===
FLASK_ENV=production
FLASK_DEBUG=false
FLASK_APP=app.py
SECRET_KEY_FILE=/run/secrets/flask_secret_key

# === CONFIGURACIÓN DE SERVIDOR ===
HOST=0.0.0.0
PORT=5000

# === CONFIGURACIÓN DE LOGGING ===
LOG_LEVEL=INFO
LOG_FORMAT=json

# === CONFIGURACIÓN DE SEGURIDAD ===
CORS_ORIGINS=http://localhost:3000,http://localhost:80,http://localhost
CORS_ALLOW_CREDENTIALS=true

# === CONFIGURACIÓN DE INTEGRACIÓN ===
NOTIFICATIONS_SERVICE_URL=http://notifications:8001